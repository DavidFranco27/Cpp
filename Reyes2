#include<stdio.h>
//Preguntamos los nombres de los tres reyes magos
int longitud(char *aux){
	int seguir=1;
	int cont=0;
	int nletras;
	while(seguir==1){
		if(*(aux+cont)!='\0'){//es lo mismo que aux[cont]
			seguir=1;
			cont++;
		}
		else{
			seguir=0;
		}
	}
	nletras=cont;
	return(nletras);
}

int main(){
	//String lista[3] como en python para hacerlo
	char *plista[3];
	char aux[10];
	int nletras;
	int cont;
	int seguir=1;
	//1ºLeo el nombre del rey mago
	printf("\nDi el nombre del primer rey mago: ");
	//2ºLo guardo en aux
	scanf("%s",aux);
	//3ºCuento cuantas letras tiene
	nletras=longitud(aux);
	printf("\nLetras=%d",nletras);
	//4ºBusco en la memoria RAM un hueco de ese tamaño
	//5º
	//6ºPaso letra a letra el nombre del rey desde aux
	//hasta la ubicacion defibnitiva
	//printf("\nDi el nombre del segundo rey mago: ");
	//scanf("%s",nombre2);
	//printf("\nDi el nombre del tercer rey mago: ");
	//scanf("%s",nombre3);
